<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="..\..\Common.props" />
  <Import Project="..\..\Common.Test.props" />
  <Import Project="..\..\Common.Test.xUnit.props" />

  <PropertyGroup>
    <TargetFrameworks>net462;net48;net5.0;net6.0</TargetFrameworks>
    <AssemblyTitle>AutoNSubstituteUnitTest</AssemblyTitle>
    <AssemblyName>AutoFixture.AutoNSubstitute.UnitTest</AssemblyName>
    <RootNamespace>AutoFixture.AutoNSubstitute.UnitTest</RootNamespace>

    <!--  Suppress warning about invalid dependency version in Castle.Core.
          That is NSubstitute dependency and we cannot fix that somehow. -->
    <NoWarn>$(NoWarn);NU1603</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.ValueTuple" Version="4.5.0" Condition="'$(TargetFramework)'=='net462'" />
  </ItemGroup>

  <Choose>
    <When Condition="'$(TargetFramework)' == 'net48'">
      <ItemGroup>
        <PackageReference Include="NSubstitute" Version="[4.4.0]" SkipGetTargetFrameworkProperties="true" SetTargetFramework="TargetFramework=netstandard1.3"/>

        <ProjectReference Include="..\AutoFixture\AutoFixture.csproj" SkipGetTargetFrameworkProperties="true" SetTargetFramework="TargetFramework=netstandard2.0" />
        <ProjectReference Include="..\AutoNSubstitute\AutoNSubstitute.csproj" SkipGetTargetFrameworkProperties="true" SetTargetFramework="TargetFramework=netstandard2.0" />
        <ProjectReference Include="..\TestTypeFoundation\TestTypeFoundation.csproj" SkipGetTargetFrameworkProperties="true" SetTargetFramework="TargetFramework=netstandard2.0" />
      </ItemGroup>
    </When>
    <Otherwise>
      <ItemGroup>
        <PackageReference Include="NSubstitute" Version="[4.4.0]" />

        <ProjectReference Include="..\AutoFixture\AutoFixture.csproj" />
        <ProjectReference Include="..\AutoNSubstitute\AutoNSubstitute.csproj" />
        <ProjectReference Include="..\TestTypeFoundation\TestTypeFoundation.csproj" />
      </ItemGroup>
    </Otherwise>
  </Choose>

  <ItemGroup>
    <Service Include="{82a7f48d-3b50-4b1e-b82e-3ada8210c358}" />
  </ItemGroup>
</Project>